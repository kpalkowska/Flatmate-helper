<% provide(:title, 'Nowa notatka') %>
<h1>Nowa notatka</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@comment) do |f| %>
      <%= f.label :Kategoria %>
      <%= f.text_field :category, class: 'form-control' %>

      <%= f.label :Treść %>
      <%= f.text_field :comment_content, class: 'form-control' %>

      <%= f.submit "Zapisz", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Wróć', root_path %>
