<% provide(:title, @flatmate.firstname) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
  	<%= @flatmate.firstname %> <%= @flatmate.lastname %>
     </h1>
     <p>
	<strong>Telefon: </strong>
	<%= @flatmate.phone %>
     </p>
     <p>
	<strong>Email: </strong>
	<%= @flatmate.email %>
     </p>
     <p>
	<strong>Opłaty: </strong>
	<%= @flatmate.charges %>
     </p>
     <p>
	<strong>Czy zapłacone: </strong>
	<% if @flatmate.is_payed %>
	  Tak
        <% else %>
	  Nie
	<% end %>
     </p>

    </section>
  </aside>
</div>

<% if @flatmate == current_flatmate %>
  <%= link_to 'Zadania', duties_path %> |
<% end %>
<% if @flatmate == current_flatmate || current_flatmate.admin? %>
  <%= link_to 'Edytuj', edit_flatmate_path(@flatmate) %> |
<% end %>
<%= link_to 'Wróć', flatmates_path %>
