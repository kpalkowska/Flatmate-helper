<p id="notice"><%= notice %></p>

<h1>Mapa</h1>


<% if @flat != nil %>

  <div style='width: 100%;'>
    <div id="map" style='width: 80%; height: 400px; margin:0 auto;'></div>
  </div>
  <script type="text/javascript">
  if(!window.location.hash) {
          window.location = window.location + '#loaded';
          window.location.reload();
      }else{
        handler = Gmaps.build('Google');
        handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
          markers = handler.addMarkers([
            {
              "lat": <%= @flat.latitude %>,
              "lng": <%= @flat.longitude %>,
              "picture": {
                "url": "http://webartesanal.com/lima-soul-demo/templates/Blue/HTML/img/icon-set/32x32/icon-arrow-down.png",
                "width":  32,
                "height": 32
              },
              "infowindow": "Twoje mieszkanie"
            }
          ]);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          handler.getMap().setZoom(15);
        });
      }

  </script>

<% end %>

<% if @flat == nil %>
    <h1>Dodaj najpierw mieszkanie</h1>
<% end %>
