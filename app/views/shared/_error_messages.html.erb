<% if @flatmate.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Formularz zawiera <%= pluralize(@flatmate.errors.count, "błąd", "błędy") %>.
    </div>
    <ul>
    <% @flatmate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
